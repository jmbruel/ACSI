    \fancyhead[R]{\AMC@LR{\he@dbas{\leavevmode\m@rque{positionHD}}}}
    \fancyfoot[L]{\AMC@LR{\leavevmode\m@rque{positionBG}}}
    \fancyfoot[R]{\AMC@LR{\leavevmode\m@rque{positionBD}}}
